pipeline {
    agent any
    
    environment {
        PATH = "$PATH:/opt/maven/bin"
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCOL = "http"
        NEXUS_URL = "10.0.2.15:8081"
        NEXUS_REPOSITORY = "demo"
        NEXUS_CREDENTIAL_ID = "nexusauth"
        SONAR_CREDENTIAL_ID = "sonar-api-key"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/DevAzizHub/projetdevopsbackend.git'
            }
        }
        
        stage('Code Quality Check') {
            steps {
                sh 'mvn clean compile'
                sh 'mvn test'
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=root'
            }
        }
        
        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    script {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }
        
        stage('Upload JAR to Nexus') {
            steps {
                script {
                    nexusArtifactUploader(
                        nexusVersion: NEXUS_VERSION,
                        protocol: NEXUS_PROTOCOL,
                        nexusUrl: NEXUS_URL,
                        groupId: 'org.example',
                        artifactId: 'projet',
                        version: '1.0-SNAPSHOT',
                        repository: NEXUS_REPOSITORY,
                        credentialsId: NEXUS_CREDENTIAL_ID,
                        file: 'target/Uber.jar',
                        type: 'jar'
                    )
                }
            }
        }
        
        stage('Display System Date') {
            steps {
                script {
                    def date = sh(script: 'date', returnStdout: true).trim()
                    println "System Date: ${date}"
                }
            }
        }
    }
}
